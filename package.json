{
  "name": "servicecheck-panel",
  "version": "1.1.8",
  "description": "ServiceCheck Panel - Angular/Ionic frontend with NestJS backend",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "docker compose up --build",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run start:dev --workspace=backend",
    "build": "docker compose build",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "build:apk": "npm run build:android --workspace=frontend && (cd frontend/android && ./gradlew assembleDebug)",
    "start:dev": "npm run start:dev --workspace=backend",
    "start:prod": "npm run start:prod --workspace=backend",
    "deploy:apk": "bash deploy-apk-latest.sh",
    "clean:backups": "bash scripts/cleanup-via-api.sh",
    "check:disk": "bash scripts/check-via-api.sh",
    "clean:backups:ssh": "bash scripts/cleanup-backups.sh",
    "check:disk:ssh": "bash scripts/check-disk-usage.sh",
    "deploy:frontend": "bash scripts/deploy-frontend.sh",
    "local:help": "bash scripts/local-helpers.sh help",
    "local:status": "bash scripts/local-helpers.sh status",
    "local:logs": "bash scripts/local-helpers.sh logs",
    "local:clean": "bash scripts/local-helpers.sh clean-local",
    "local:generate": "bash scripts/local-helpers.sh generate-script",
    "test": "npm run test --workspace=frontend && npm run test --workspace=backend",
    "lint": "npm run lint --workspace=frontend && npm run lint --workspace=backend",
    "lintFormat": "npm run lint && npm run format",
    "format": "prettier --write \"**/*.{ts,js,json,md,html,scss,css}\"",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "devDependencies": {
    "@angular-eslint/builder": "^20.2.0",
    "@angular-eslint/eslint-plugin": "^20.2.0",
    "@angular-eslint/eslint-plugin-template": "^20.2.0",
    "@angular-eslint/template-parser": "^20.2.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  }
}
